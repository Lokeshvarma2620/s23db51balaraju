extends layout

block content
  h1= title
  - var results = [{"kite_colour":"Red","kite_shape" :"vertical","kite_cost":"$10"},{"kite_colour":"blue","kite_shape":"horizontal","kite_cost" :"$20"},{"kite_colour":"orange","kite_shape":"horizontal","kite_cost" :"$30"},{"kite_colour":"white","kite_shape":"vertical","kite_cost" :"$60"}]
  div.container-fluid
      div.row
          each item,index in results
               div.col-sm-2(onclick=`buy(${index})`) kite colour: #{item["kite_colour"]} <br> kite shape: #{item["kite_shape"]} <br> kite cost: #{item["kite_cost"]}
      script.
          function buy(index) {
          alert("You Purchased item "+index);
            }